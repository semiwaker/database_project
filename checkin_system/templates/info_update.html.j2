{% extends 'base.html.j2' %}

{% block header %}
<h1>{% block title %}修改自身信息{% endblock %}</h1>
{% endblock %}

{% block content %}
<form method="post">
<div class="form-group">
    <label> 电子邮件 </label>
    <input type="email" name="email" value="{{ g.email }}" class="form-control" requied />
</div>

<div class="form-group">
    <label> 电话号码 </label>
    <input type="text" name="phone" value="{{ g.phone }}" class="form-control" requied />
</div>

<div class="form-group">
    <label> 新密码 </label>
    <input type="password" name="password" class="form-control" required />
</div>

<div class="form-group">
    <label> 旧密码 </label>
    <input type="password" name="old_password" class="form-control" required />
</div>

<button type="submit" class="btn btn-primary">修改</button>
{% if msg %}
<div class="alert alert-danger">{{ msg }}</div>
{% endif %}
</form>
{% endblock %}