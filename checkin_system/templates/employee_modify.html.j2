{% extends 'base.html.j2' %}

{% block header %}
<h1>{% block title %}修改员工信息{% endblock %}</h1>
{% endblock %}

{% block content %}
<table>
    <tr>
        <th>员工编号</th>
        <th>员工姓名</th>
        <th>性别</th>
        <th>出生日期</th>
        <th>电子邮件</th>
        <th>电话号码</th>
        <th>身份证号</th>
        <th>部门名称</th>
        <th>员工等级</th>
        <th></th>
    </tr>
    {% for user in g.reachable_users %}
    <tr>
        <form action="{{ url_for('main.employee_modify.update', user_id=user.user_id) }}" method="POST">
            <td>user.user_id </td>
            <td><input type="text" id="name" value="{{ user.name }}" /> </td>
            <td>
                <select id="gender">
                {% if user.gender=="男" %}
                    <option value="男" selected>男</option>
                {% else %}
                    <option value="男">男</option>
                {% endif %}
                {% if user.gender=="女" %}
                    <option value="女" selected>女</option>
                {% else %}
                    <option value="女">女</option>
                {% endif %}
                </select>
            </td>
            <td><input type="date" id="birthday" value="{{ user.birthday }}" /> </td>
            <td><input type="email" id="email" value="{{ user.email }}" /> </td>
            <td><input type="text" id="phone" value="{{ user.phone }}" /> </td>
            <td><input type="text" id="id_number" value="{{ user.id_number }}" /> </td>
            <td>
                {% if g.user_type=="admin" %}
                <select name="department">
                {% else %}
                <select name="department" disabled>
                {% endif %}
                {% for department in g.department_list %}
                    {% if user.department_id == department.id %}
                    <option value="{{ department.id }}" selected> {{ department.name }} </option>
                    {% else %}
                    <option value="{{ department.id }}"> {{ department.name }} </option>
                    {% endif %}
                {% endfor %}
                </select>
            </td>
            <td>
                {% if g.user_type=="admin" %}
                <select name="level">
                {% else %}
                <select name="level" diabled>
                {% endif %}
                {% if user.level == "employee" %}
                <option value="employee" selected>员工</option>
                {% else %}
                <option value="employee">员工</option>
                {% endif %}
                {% if user.level == "manager" %}
                <option value="manager" selected>经理</option>
                {% else %}
                <option value="manager">经理</option>
                {% endif %}
                {% if user.level == "admin" %}
                <option value="admin" selected>管理员</option>
                {% else %}
                <option value="admin">管理员</option>
                {% endif %}
                </select>
            </td>
            <td><input type="submit" value="修改"/></td>
        </form>
    </tr>
    {% endfor %}
</table>
{% endblock%}
